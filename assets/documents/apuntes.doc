 HOTELES 
  id INT PRIMARY KEY AUTO_INCREMENT,
  nombre VARCHAR(255) NOT NULL,
  direccion VARCHAR(255) NOT NULL,
  ciudad VARCHAR(255) NOT NULL,
  pais VARCHAR(255) NOT NULL,
  num_habitaciones INT NOT NULL,
